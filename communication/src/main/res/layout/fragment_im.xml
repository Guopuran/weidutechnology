<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"

    >
    <RadioGroup
        android:id="@+id/im_radio"
        android:layout_width="188dp"
        android:layout_height="30dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="38dp"
        android:background="@drawable/radiobutton_radius"
        android:orientation="horizontal"
        >
        <RadioButton
            android:id="@+id/im_radio_message"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:text="@string/im_radio_message"
            android:button="@null"
            android:gravity="center"
            android:textSize="20sp"
            android:textColor="@drawable/radiobutton_check_textcolor"
            android:background="@drawable/radiobutton_check_backgroud"

            />
        <RadioButton
            android:id="@+id/im_radio_relation"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:text="@string/im_radio_relation"
            android:button="@null"
            android:gravity="center"
            android:textSize="20sp"
            android:checked="true"
            android:textColor="@drawable/radiobutton_check_textcolor"
            android:background="@drawable/radiobutton_check_backgroud"
            />
    </RadioGroup>
    <ImageView
        android:id="@+id/im_image_more"
        android:layout_width="22dp"
        android:layout_height="22dp"
        android:src="@mipmap/common_nav_btn_add_n"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toBottomOf="@id/im_radio"
        app:layout_constraintTop_toTopOf="@id/im_radio"
        android:layout_marginRight="12dp"
        />
    <android.support.v4.view.ViewPager
        android:id="@+id/im_viewpager"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/im_radio"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginTop="10dp"
        ></android.support.v4.view.ViewPager>
</android.support.constraint.ConstraintLayout>