<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:fresco="http://schemas.android.com/apk/res-auto"
    >
    <com.facebook.drawee.view.SimpleDraweeView
        android:layout_width="284dp"
        android:layout_height="137dp"
        android:id="@+id/information_banner_item_image"
        fresco:roundedCornerRadius="8dp"
        fresco:roundTopLeft="true"
        fresco:roundTopRight="false"
        fresco:roundBottomLeft="false"
        fresco:roundBottomRight="true"
        fresco:roundingBorderWidth="2dp"
        />
    <TextView
        android:id="@+id/information_banner_item_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="14sp"
        android:layout_alignBottom="@id/information_banner_item_image"
        android:textColor="#eccc"
        android:text="1111111111111111111111111111"
        />
</RelativeLayout>