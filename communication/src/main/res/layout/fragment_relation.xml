<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="#ff6699">
    <android.support.constraint.ConstraintLayout
    android:id="@+id/relition_layout_rela_search"
    android:layout_width="match_parent"
    android:layout_height="52dp"
    app:layout_constraintLeft_toLeftOf="parent"
    app:layout_constraintRight_toRightOf="parent"
    app:layout_constraintTop_toTopOf="parent"
    android:background="@color/colorWrite"
    >
    <TextView
        android:id="@+id/relition_text_search"
        android:layout_width="match_parent"
        android:layout_height="32dp"
        android:gravity="center_vertical"
        android:layout_marginLeft="12dp"
        android:layout_marginRight="12dp"
        android:hint="Bearch"
        android:textColor="@color/colorRadioText"
        android:background="@drawable/text_search_radius"
        android:paddingLeft="50dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        />
    <ImageView
        android:id="@+id/relition_image_search"
        android:layout_width="22dp"
        android:layout_height="22dp"
        android:src="@mipmap/common_nav_btn_search_n"
       app:layout_constraintLeft_toLeftOf="@id/relition_text_search"
        app:layout_constraintTop_toTopOf="@id/relition_text_search"
        app:layout_constraintBottom_toBottomOf="@id/relition_text_search"
        android:layout_marginLeft="15dp"
        />
    </android.support.constraint.ConstraintLayout>
    <android.support.constraint.ConstraintLayout
        android:id="@+id/relition_layout_rela_message"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/relition_layout_rela_search"
        android:layout_marginTop="1dp"
        android:background="@color/colorWrite"
        android:gravity="center_vertical"
        >
        <ImageView
            android:id="@+id/message_image"
            android:layout_width="30dp"
            android:layout_height="30dp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginLeft="12dp"
            android:src="@mipmap/nav_btn_setting_n"
            />
        <TextView
            android:id="@+id/flock_text_message_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="消息"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toRightOf="@id/message_image"
            android:layout_marginLeft="10dp"
            android:textSize="14sp"
            android:textColor="@color/colorRadioText"
            />
    </android.support.constraint.ConstraintLayout>
    <android.support.constraint.ConstraintLayout
        android:id="@+id/relition_layout_rela_flock"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/relition_layout_rela_message"
        android:layout_marginTop="1dp"
        android:background="@color/colorWrite"
        android:gravity="center_vertical"
        >
        <ImageView
            android:id="@+id/flock_image"
            android:layout_width="30dp"
            android:layout_height="30dp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginLeft="12dp"
            android:src="@mipmap/nav_btn_setting_more_n"
            />
        <TextView
            android:id="@+id/flock_text_flock_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="群组"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toRightOf="@id/flock_image"
            android:layout_marginLeft="10dp"
            android:textSize="14sp"
            android:textColor="@color/colorRadioText"
            />
    </android.support.constraint.ConstraintLayout>
    <android.support.v7.widget.RecyclerView
        android:id="@+id/relation_recy"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginTop="4dp"
        app:layout_constraintTop_toBottomOf="@id/relition_layout_rela_flock"
        ></android.support.v7.widget.RecyclerView>
</android.support.constraint.ConstraintLayout>