<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="130dp"
    android:layout_height="68dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:background="@drawable/more_pop_radius">
    <android.support.constraint.ConstraintLayout
        android:id="@+id/more_pop_friend"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginRight="12dp"
        >

        <ImageView
            android:id="@+id/friend_image"
            android:layout_width="22dp"
            android:layout_height="22dp"
            android:src="@mipmap/nav_icon_add_friend_n"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="6dp"
            />

        <TextView
            android:id="@+id/friend_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintLeft_toRightOf="@id/friend_image"
            app:layout_constraintTop_toTopOf="@id/friend_image"
            app:layout_constraintBottom_toBottomOf="@id/friend_image"
            android:text="@string/more_friend"
            android:textColor="@color/colorWrite"
            android:textSize="14sp"
            android:layout_marginLeft="10dp"
            />
    </android.support.constraint.ConstraintLayout>
    <android.support.constraint.ConstraintLayout
        android:id="@+id/more_pop_group"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginTop="10dp"
        android:layout_marginRight="12dp"
        >

        <ImageView
            android:id="@+id/group_image"
            android:layout_width="22dp"
            android:layout_height="22dp"
            android:src="@mipmap/nav_icon_add_group_n"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="6dp"
            android:layout_marginBottom="10dp"
            />

        <TextView
            android:id="@+id/group_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintLeft_toRightOf="@id/group_image"
            app:layout_constraintTop_toTopOf="@id/group_image"
            app:layout_constraintBottom_toBottomOf="@id/group_image"
            android:text="@string/more_group"
            android:textColor="@color/colorWrite"
            android:textSize="14sp"
            android:layout_marginLeft="10dp"
            />
    </android.support.constraint.ConstraintLayout>

</LinearLayout>