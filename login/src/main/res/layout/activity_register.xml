<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingRight="40dp"
    android:paddingLeft="40dp"
    android:background="@mipmap/login_bg"
    tools:context=".activity.RegisterActivity">
    <ImageView
        android:layout_width="64dp"
        android:layout_height="64dp"
        android:src="@mipmap/logo_icon"
        android:layout_marginTop="28dp"
        android:layout_gravity="center"
        />
    <EditText
        android:id="@+id/activity_register_edit_name"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:layout_marginTop="40dp"
        android:hint="昵称"
        android:drawableLeft="@mipmap/register_icon_name_n"
        android:drawablePadding="20dp"
        android:textSize="18sp"
        android:textColorHint="@color/white"
        android:textColor="@color/white"
        android:paddingLeft="10dp"
        android:background="@null"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginTop="10dp"
        android:background="@color/white"/>
    <EditText
        android:id="@+id/activity_register_edit_phone"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:layout_marginTop="40dp"
        android:hint="手机号"
        android:drawableLeft="@mipmap/register_icon_phone_n"
        android:drawablePadding="20dp"
        android:textSize="18sp"
        android:textColorHint="@color/white"
        android:textColor="@color/white"
        android:paddingLeft="10dp"
        android:background="@null"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginTop="10dp"
        android:background="@color/white"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="30dp">

        <EditText
            android:id="@+id/activity_register_edit_pwd"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="30dp"
            android:hint="登录密码"
            android:password="true"
            android:textColorHint="@color/white"
            android:textColor="@color/white"
            android:drawableLeft="@mipmap/register_icon_lock_n"
            android:drawablePadding="20dp"
            android:textSize="18sp"
            android:paddingLeft="10dp"
            android:background="@null"
            />

        <ImageView
            android:id="@+id/activity_register_img_eyes"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@mipmap/login_icon_eye_n"
            android:layout_gravity="center_vertical"/>
    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginTop="10dp"
        android:background="@color/white"/>
    <EditText
        android:id="@+id/activity_register_edit_security"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:layout_marginTop="20dp"
        android:hint="验证码"
        android:drawableLeft="@mipmap/login_icon_phone_n"
        android:drawablePadding="20dp"
        android:textSize="18sp"
        android:textColorHint="@color/white"
        android:textColor="@color/white"
        android:paddingLeft="10dp"
        android:background="@null"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginTop="10dp"
        android:background="@color/white"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/activity_register_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/register_text_message_register"
            android:gravity="right"
            android:layout_marginLeft="10dp"
            android:textSize="14sp"
            android:textColor="@color/white"/>

    </LinearLayout>

    <Button
        android:id="@+id/activity_register_button"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:text="@string/register_button"
        android:textSize="18sp"
        android:textColor="@color/white"
        android:layout_marginTop="80dp"
        android:background="@drawable/activity_login_login_shape"
        />

</LinearLayout>